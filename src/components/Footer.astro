<style>
  footer {
    margin-top: 2em;
    padding-top: 1em;
    border-top: 1px solid var(--disabled-font-color);
    text-align: center;
  }
  
  p {
    color: var(--disabled-font-color);
    font-size: 0.9em;
    margin-top: 1em;
  }
  
  .links-container {
    display: flex;
    justify-content: center;
    width: 100%;
    margin-bottom: 1.5em;
  }

  .links-section {
    display: flex;
    flex-direction: column;
    gap: var(--footer-spacing);
    align-items: center;
    padding: 15px;
    width: 100%;
    max-width: 500px;
    background-color: var(--card-background);
    border-radius: var(--border-radius);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .icons {
    display: flex;
    gap: var(--footer-spacing);
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
  }

  .icons a {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 10px;
    border-radius: var(--border-radius);
    transition: background-color 0.2s ease;
    min-width: 80px;
  }
  
  .icons a:hover {
    background-color: rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .icons img {
    width: 33px;
    height: 33px;
    transition: transform 0.2s ease;
  }
  
  .icons a:hover img {
    transform: scale(1.1);
  }
  
  .icons span {
    font-size: 0.9rem;
    color: var(--font-color);
  }
</style>
