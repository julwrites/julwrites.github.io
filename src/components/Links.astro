<style>
  .links-container {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .links-section {
    display: flex;
    flex-direction: column;
    gap: var(--footer-spacing);
    align-items: center;
    padding: 20px;
    width: 100%;
    max-width: 500px;
  }

  .icons {
    display: flex;
    gap: var(--footer-spacing);
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
  }

  .icons a {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 10px;
    border-radius: var(--border-radius);
    transition: background-color 0.2s ease;
    min-width: 80px;
  }
  
  .icons a:hover {
    background-color: rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .icons img {
    width: 33px;
    height: 33px;
    transition: transform 0.2s ease;
  }
  
  .icons a:hover img {
    transform: scale(1.1);
  }
  
  .icons span {
    font-size: 0.9rem;
    color: var(--font-color);
  }

  p {
    margin: 0;
    text-align: center;
    font-weight: 500;
  }
</style>
