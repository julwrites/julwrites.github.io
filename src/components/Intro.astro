---
import fs from 'node:fs';
import path from 'node:path';

const photosDir = path.join(process.cwd(), 'public/assets/images/photos');
const images = fs.readdirSync(photosDir).filter(file => /\.(jpg|jpeg|png|webp)$/i.test(file));
---

<section class="intro card">
  <h1>Hi, I'm Julian</h1>
  <img id="intro-image" src="/assets/images/photos/2.jpg" alt="Photo of me" />
  <p>Welcome to my domain</p>
</section>

<script define:vars={{ images }}>
  const randomImage = images[Math.floor(Math.random() * images.length)];
  const img = document.getElementById("intro-image");
  if (img) {
    img.src = `/assets/images/photos/${randomImage}`;
  }
</script>

<style>
  .intro {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--content-spacing);
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
  }

  img {
    max-width: 256px;
    width: 100%;
    border-radius: 50%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  
  @media (max-width: 768px) {
    img {
      max-width: 200px;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    p {
      font-size: 1.2rem;
    }
  }

  p {
    font-size: 1.5rem;
    margin: 0;
    color: var(--accent-color);
  }
</style>
