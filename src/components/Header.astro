<header>
  <div class="header-content">
    <h2>Julian Teh</h2>
    <nav>
      <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a>
      <a href="/projects" class={Astro.url.pathname.startsWith('/projects') ? 'active' : ''}>Projects</a>
      <a href="/blog/" class={Astro.url.pathname.startsWith('/blog') ? 'active' : ''}>Blog</a>
      <a href="https://github.com/julwrites" target="_blank">GitHub</a>
    </nav>
  </div>
</header>

<style>
  header {
    margin-bottom: 2em;
  }
  
  .header-content {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }
  
  h2 {
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .header-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
    
    nav {
      margin: 0;
    }
  }
</style>
