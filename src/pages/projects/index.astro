---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { sortPostsByDate } from '../../utils/post';

// Get all project posts sorted by date
const projects = await getCollection('projects');
const sortedProjects = sortPostsByDate(projects);
---

<Layout title="Projects | tehj.io">
  <main>
    <h1>Projects</h1>
    <ul class="project-list">
      {sortedProjects.map((project) => (
        <li class="project-item">
          <a href={`/projects/${project.slug}/`}>
            <h2 class="project-title">{project.data.title}</h2>
            <p class="project-date">{new Date(project.data.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}</p>
            <p class="project-description">{project.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: var(--content-spacing);
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
  }

  h1 {
    font-size: 40px;
    font-weight: 500;
    margin: 0;
    text-align: center;
    margin-bottom: 2rem;
  }

  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-item {
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 2rem;
  }

  .project-item a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .project-title {
    font-size: 24px;
    margin: 0 0 0.5rem 0;
  }

  .project-date {
    font-size: 14px;
    color: #666;
    margin: 0 0 0.5rem 0;
  }

  .project-description {
    margin: 0;
    line-height: 1.5;
  }

  @media (prefers-color-scheme: dark) {
    .project-item {
      border-bottom-color: #333;
    }
    
    .project-date {
      color: #aaa;
    }
  }
</style>
